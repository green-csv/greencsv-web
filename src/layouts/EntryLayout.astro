---
import type { CollectionEntry } from "astro:content";
import '@fontsource/ibm-plex-mono';
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"entry">["data"];
const { lang, slug } = Astro.params;
const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang={lang} data-theme="dark">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div
					class="prose prose-sm sm:prose-base lg:prose-lg xl:prose-xl 2xl:prose-2xl dark:prose-invert mx-auto"
				>
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>

					<slot />

					<div class="mt-6 mb-10 max-w-3xl mx-auto">
						<script
							src="https://giscus.app/client.js"
							data-repo="green-csv/WebPage.Blazor.Entries"
							data-repo-id="R_kgDOOsvfVA"
							data-category="Announcements"
							data-category-id="DIC_kwDOOsvfVM4CqWfd"
							data-mapping="pathname"
							data-strict="0"
							data-reactions-enabled="1"
							data-emit-metadata="0"
							data-input-position="top"
							data-theme="noborder_dark"
							data-lang="en"
							crossorigin="anonymous"
							async></script>
					</div>
				</div>
			</article>
		</main>
	</body>
</html>
